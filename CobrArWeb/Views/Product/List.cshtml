@model IEnumerable<CobrArWeb.Data.Product>
@{
    ViewData["Title"] = "Products";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Count() > 0)
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Subcategory</th>
                <th>Team</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                @foreach (var category in product.SousCategories.Category.Team.Categories)
                {
                    @foreach (var subCategory in category.SousCategories)
                    {
                        if (subCategory.Products.Contains(product))
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Price</td>
                                <td>@category.Name</td>
                                <td>@subCategory.Name</td>
                                <td>@category.Team.Name</td>
                            </tr>
                        }
                    }
                }
            }
        </tbody>
    </table>
}
else
{
    <p>No products found.</p>
}
