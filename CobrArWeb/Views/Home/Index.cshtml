@using CobrArWeb.Data;
@{
    ViewData["Title"] = "Home Page";
}

@section scripts {
    <script src="~/js/ChatBox.js" asp-append-version="true"></script>


}


<div class="text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Bienvenue sur CobrAR @ViewBag.UserName</h3>
                    </div>

                    <div class="panel-body">
                        @if (ViewData["IsAuthenticated"] == null || false.Equals(ViewData["IsAuthenticated"]))
                        {
                            @using (Html.BeginForm("Login", "Home"))
                            {
                                <fieldset>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Nom d'utilisateur" name="name" type="text">
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                    </div>

                                    <input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
                                </fieldset>
                                <span>ou créez un compte : </span>
                                @Html.ActionLink("Creez un compte", "CreateUser", "Home")
                            }
                            @if (Model != null && !string.IsNullOrWhiteSpace(Model.ErrorText))
                            {
                                <div class="alert alert-danger" role="alert">
                                    @Model.ErrorText
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

 @if (ViewData["IsAuthenticated"] != null && true.Equals(ViewData["IsAuthenticated"]))
{
    <div class="panel panel-default">
        <div class="panel-heading">
                            <h3 class="panel-title">Accès rapide</h3>
                        </div>
                        <div class="panel-body">
                            <ul class="nav nav-pills nav-stacked">
                <li>@Html.ActionLink("List", "List", "Product")</li>
                <li>@Html.ActionLink("Caisse", "Caisse", "Cart")</li>
             </ul>
                        </div>
                    </div>
}

@if (ViewData["IsAuthenticated"] != null && true.Equals(ViewData["IsAuthenticated"]))
{
 
    <input type="hidden" id="current-user-name" value="@ViewBag.UserName" />
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Chat</h3>
            </div>
            <div class="panel-body">
                <div id="chat-container">
                    <li>
                        <span class="message-user-name"></span>: <span class="message-content">Votre message</span>
                    </li>
                    <ul id="chat-messages" data-user-name="@ViewBag.UserName">
                        <!-- Chat messages will be displayed here -->
                    </ul>
                    <form id="chat-form">
                        <div class="form-group">
                            <input type="text" class="form-control" id="chat-message-input" placeholder="Enter message">
                        </div>
                        <button type="submit" class="btn btn-primary">Send</button>
                        @if (ViewData["IsAuthenticated"] != null && true.Equals(ViewData["IsAuthenticated"]) && ViewBag.UserRole == UserRole.Admin)
                        {
                            @if (ViewData["IsAdmin"] != null && true.Equals(ViewData["IsAdmin"]))
                            {
                                <button type="button" class="btn btn-danger" onclick="if (confirm('Êtes-vous sûr de vouloir supprimer tous les messages ?')) { window.location.href='@Url.Action("DeleteMessages", "Home")' }">Supprimer tous les messages</button>
                            }
                        }
                    </form>
                  
                </div>
            </div>
        </div>
    </div>
    }